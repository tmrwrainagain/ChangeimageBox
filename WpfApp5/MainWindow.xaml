<Window x:Class="ImageChangeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Change App" Height="350" Width="525">
    <Grid>
        <!-- CheckBox для изменения картинки -->
        <CheckBox x:Name="checkBox" Content="Изменить картинку" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Checked="checkBox_CheckedChanged" Unchecked="checkBox_CheckedChanged"/>

        <!-- Image для отображения картинки -->
        <Image x:Name="image" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" Margin="10"/>
    </Grid>
</Window>
